<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorGreyLowTint"
    tools:targetApi="lollipop">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/corners_radius_medium"/>
            <stroke
                android:width="@dimen/default_stroke"
                android:color="@color/colorGreyLowTint"
                />
            <padding
                android:top="@dimen/default_micro"
                android:bottom="@dimen/default_micro"
                android:left="@dimen/default_micro"
                android:right="@dimen/default_micro"
                />
        </shape>
    </item>
</ripple>

