<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTextView" parent="Widget.AppCompat.TextView">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorDarkTint</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="SmallTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <style name="ChatMessageHeaderText" parent="SmallTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="ChatMessageContentText" parent="SmallTextView">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>