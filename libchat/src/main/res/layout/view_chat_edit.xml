<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatEditLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_background_edit_contour"
    android:elevation="@dimen/default_elevation_height">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/chatCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_ripple_borderless"
        android:padding="@dimen/default_medium"
        android:tint="@color/colorGreyMidTint"
        android:tintMode="src_in"
        android:src="@drawable/ic_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chatEditText"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/chatEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/colorDarkTint"
        android:textSize="@dimen/fonts_size_large"
        android:background="@android:color/transparent"
        android:hint="@string/common_message"
        android:textCursorDrawable="@drawable/drawable_cursor_black"
        android:layout_marginStart="@dimen/default_medium"
        android:imeOptions="flagNoEnterAction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chatCameraButton"
        app:layout_constraintEnd_toStartOf="@+id/chatSendButton"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/chatSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_ripple_borderless"
        android:padding="@dimen/default_medium"
        android:src="@drawable/ic_send"
        android:tint="@color/colorGreyMidTint"
        android:tintMode="src_in"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chatEditText"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

</androidx.constraintlayout.widget.ConstraintLayout>